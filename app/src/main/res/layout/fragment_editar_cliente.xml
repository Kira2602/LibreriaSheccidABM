<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/containerA"
    android:background="@drawable/bg_productos"
    tools:context=".fragmentEditarCliente">

    <LinearLayout
        android:layout_width="300dp"
        android:padding="40dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtClientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="CLIENTE" />

        <EditText
            android:id="@+id/editTextNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="70dp"
            android:hint="Nombre" />

        <EditText
            android:id="@+id/editTextApellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:hint="Apellidos" />

        <EditText
            android:id="@+id/editTextCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            />

        <EditText
            android:id="@+id/editTextNumeroCelular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:hint="NÃºmero de celular"
            android:inputType="phone"
            />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="200dp"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:padding="15dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="EDITAR"
            android:backgroundTint="#ae6070"
            android:layout_marginTop="50dp"
            />

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="200dp"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:padding="15dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ELIMINAR"
            android:backgroundTint="#ae6070"
            android:layout_marginTop="10dp"
            />


    </LinearLayout>
</LinearLayout>